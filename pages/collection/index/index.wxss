.tab {
  height: 7vh;
  display: flex;
  line-height: 7vh;
}

.tab view {
  flex: 1 0 auto;
  font-size: 14px;
  color: #333;
  text-align: center;
}

.tab .active {
  color: #ff5f19;
  border-bottom: 1px solid #ff5f19;
  padding-bottom: 1.8vh;
}

.list {
  height: 93vh;
}

.item {
  display: flex;
  border: 1px solid #c5b558;
  height: 120px;
  margin: 10px 10px 0 10px;
}

.item .left {
  flex: 0 1 25%;
  text-align: center;
  line-height: 50px;
  font-size: 36px;
  margin: 32px 0;
  color: #ff5f19;
  border-right: 2px dashed #c5b558;
}

.item .left text {
  font-size: 20px;
  color: #ff5f19;
}

.item .right {
  flex: 1 1 auto;
  font-size: 12px;
  color: #999;
  margin-top: 32px;
  margin-left: 25px;
}

.item .right text {
  color: #ff5f19;
}

/**index.wxss**/
::-webkit-scrollbar {
  height: 0;
  width: 0;
}
.headerPanel {
  height: 90rpx;
  width: 100%;
  white-space: nowrap;
  overflow-x: auto;
  overflow-y: hidden;
  background-color: #f6f6f6;
  position: fixed;
  top: 0;
  left: 0;
  z-index: 10;
  /* box-shadow: 0 0.5px 0 0 rgba(0, 0, 0, 0.2); */
}
.headerTitle {
  width: 33.33%;
  height: 90rpx;
  /* float: left; */
  display: inline-block;
  line-height: 90rpx;
  font-size: 32rpx;
  cursor: pointer;
  box-sizing: border-box;
  color: #6a727b;
  border-bottom: 2rpx solid rgba(0, 0, 0, 0.2);
  text-align: center;
}
.headerTitleActive {
  border-bottom: 4rpx solid #f33;
  color: #f33;
}

/*content  */
.content {
  margin-top: 90rpx;
}
.content-top-pic {
  height: 380rpx;
  width: 100%;
  background-color: rgba(0, 0, 0, 0.2);
}
.swiper {
  height: 100%;
  width: 100%;
}
.swiper image {
  height: 100%;
  width: 100%;
}

/*swiper样式覆盖  */


.content-list {
  background-color: #fff;
  z-index: 1;
  position: relative;
}
.list-item {
  height: 180rpx;
  width: 100%;
  box-sizing: border-box;
}
.list-item-content {
  padding: 20rpx 30rpx 20rpx 30rpx;
  border-bottom: 1px solid #e5e5e5;
  overflow: hidden;
  box-sizing: border-box;
}
.list-item-left {
  height: 140rpx;
  width: 186rpx;
  margin-right: 20rpx;
  float: left;
}
.list-item-left image {
  width: 100%;
  height: 100%;
}
.list-item-right {  
  float: left;
  width: 484rpx;
  height: 140rpx;
  position: relative;
}
.article-title {
  font-size: 34rpx;
  color: #404040;
  text-align: justify;
  height: 86rpx;
  overflow-y: hidden;
}
.article-source::before {
  content: '来源:';
  font-size: 24rpx;
  color: #888;
  margin-right: 10rpx;
}
.article-source {
  font-size: 24rpx;
  color: #888;
  position: absolute;
  bottom: 0;
  right: 0;
}
.article-editTime {
  font-size: 24rpx;
  color: #a8a8a8;
  position: absolute;
  bottom: 0;
  left: 0;
}
